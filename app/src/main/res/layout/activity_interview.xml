<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interview"
    android:background="@drawable/interback">

    <!-- Main TextView Header -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="InterView Questions"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- List of TextViews to display the sections -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Operating System"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Computer Networks"
        android:textSize="33dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="ComputerOrganisation"
        android:textSize="33dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Mysql"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Python"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Java"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />



    <TextView
        android:id="@+id/textView8"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="CPP"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="DSA"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@drawable/textbackground"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
